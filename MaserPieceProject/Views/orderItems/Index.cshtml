@model IEnumerable<MaserPieceProject.Models.orderItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="u-s-m-b-8">
                        @using (Html.BeginForm("Searchacc", "orderItems"))
                        {
                            <div class="">
                                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="search" id="search" placeholder="Search for...">
                                        <span class="input-group-btn" style="margin-left:3px">
                                            <button class="btn btn-primary" type="submit">Search</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Order.AspNetUser.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Order.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Order.OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.color)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.size)
                            </th>
                            @*<th>
                    @Html.DisplayNameFor(model => model.Shipping)
                </th>*@

                            @*<th>
                    @Html.DisplayNameFor(model => model.Order.Id)
                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Product.ProductName)
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order.AspNetUser.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.color)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.size)
                                </td>
                                @*<td>
                        @Html.DisplayFor(modelItem => item.Shipping)
                    </td>*@

                                @*<td>
                        @Html.DisplayFor(modelItem => item.Order.Id)
                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.orderItemsId }) |*@
                                    @Html.ActionLink("Details", "Details", new { id = item.orderItemsId }, new { @class = "btn btn-secondary" }) |
                                    @Html.ActionLink("Shipping", "accept", "orderItems", new { id = item.orderItemsId }, new { @class = "btn btn-success" })
                                    @*@Html.ActionLink("Reject", "reject", "orderItems", new { id = item.orderItemsId }, new { @class = "btn btn-danger" })*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.orderItemsId })*@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>