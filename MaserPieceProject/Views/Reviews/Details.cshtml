@model MaserPieceProject.Models.Review

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Review Details</h2>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td class="font-weight-bold">Comment:</td>
                                    <td>@Html.DisplayFor(model => model.comment)</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold">Rating:</td>
                                    <td>@Html.DisplayFor(model => model.rating)</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold">Reviewer Email:</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold">Reviewer Name:</td>
                                    <td>@Html.DisplayFor(model => model.AspNetUser.fullName)</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold">Product Name:</td>
                                    <td>@Html.DisplayFor(model => model.Product.ProductName)</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold">Reviewer User Email:</td>
                                    <td>@Html.DisplayFor(model => model.AspNetUser.Email)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <p>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary", style = "margin-right: 10px;" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>