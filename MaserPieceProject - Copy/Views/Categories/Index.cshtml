@model IEnumerable<MaserPieceProject.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
        width: 50px;
    }

        /*  change the number below to scale to the appropriate size*/
        .thumbnail:hover {
            transform: scale(5);
        }
</style>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <p>

                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

                    </p>
                    <table class="table table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryImage)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.CategoryImage)*@
                                    <img style="width:100px;height:100px" src="~/images/@item.CategoryImage" class="thumbnail" />
                                </td>
                                <td>

                                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-secondary" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

