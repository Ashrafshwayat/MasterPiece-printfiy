@model MaserPieceProject.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3>Are you sure you want to delete this?</h3>
                        <h4>Category</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CategoryName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CategoryDescription)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CategoryDescription)
                            </dd>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div>
                          

                                <dt>
                                    @*@Html.DisplayNameFor(model => model.CategoryImage)*@
                                    <img style="width:300px" src="~/images/@Model.CategoryImage" class="thumbnail" />
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CategoryImage)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
