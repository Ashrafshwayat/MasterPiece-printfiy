@model IEnumerable<MaserPieceProject.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    @*<p>
                        @Html.ActionLink("Create New", "Create")
                    </p>*@
                    <table class="table table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderPrice)
                            </th>
                            @*<th>
                @Html.DisplayNameFor(model => model.isCheckout)
            </th>*@
                            @*<th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>*@
                            @*<th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            @*<th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>*@
                            @*<th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Isaccepted)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AspNetUser.Email)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderPrice)
                                </td>
                                @*<td>
                    @Html.DisplayFor(modelItem => item.isCheckout)
                </td>*@
                                @*<td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                @*<td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>*@
                                @*<td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                                </td>
                                <td>
                                    @{
                                        if (item.Isaccepted == true)
                                        {
                                           <p>Done</p>
                                        }
                                        else
                                        {
                                          <p>pending</p>
                                         }

                                    }
                                    @*@Html.DisplayFor(modelItem => item.Isaccepted)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |*@
                                    @*@Html.ActionLink("Accept", "accept", "Orders", new { id = item.OrderId }, new { @class = "btn btn-success" }) |*@
                                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-secondary" }) 
                                    @*@Html.ActionLink("Reject", "reject", "Orders", new { id = item.OrderId }, new { @class = "btn btn-danger" })*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.OrderId })*@

                                </td>
                                @*<td>
                    @Html.ActionLink("Accept", "accept", "Orders", new { id = item.OrderId }, new { @class = "btn btn-success" })

                </td>
                <td>
                    @Html.ActionLink("Reject", "reject", "Orders", new { id = item.OrderId }, new { @class = "btn btn-danger" })

                </td>*@

                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
